<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--ImageButton avanzar -->
    <style name="forwardButtonStyle">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_baseline_arrow_right_24</item>
    </style>
    <!--ImageButton retroceder-->
    <style name="backButtonStyle">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_baseline_arrow_left_24</item>
    </style>
    <!--TextViews style-->
    <style name="textStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#201E1E</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <!--EditText style-->
    <style name="editTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#201E1E</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="backgroundTint">#D32F2F</item>
    </style>

    <style name="header">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#1C1B1B</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardViewStyle">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">180dp</item>
        <item name="cardBackgroundColor">#1C1B1B</item>
    </style>

    <style name="pizzaImage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="cardviewText" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#DAD9D9</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">monospace</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="CleanButtonStyle">
        <item name="android:layout_width">53dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_baseline_brush_24</item>
    </style>

    <style name="tableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="launchButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#201E1E</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">@dimen/material_emphasis_medium</item>
        <item name="android:textColor">#BAB8B8</item>
    </style>
</resources>